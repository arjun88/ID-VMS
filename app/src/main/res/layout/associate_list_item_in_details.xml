<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardUseCompatPadding="true"
    app:cardBackgroundColor="#FFFFFF"
    app:cardCornerRadius="0dp"
    app:cardElevation="0dp">

        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="16dp"
            android:weightSum="1"
            android:orientation="horizontal">

            <de.hdodenhof.circleimageview.CircleImageView
                android:layout_width="0dp"
                android:layout_height="64dp"
                android:layout_weight="0.2"
                android:background="#f2f2f2"
                android:id="@+id/ass_iv_list_item"/>

            <androidx.appcompat.widget.LinearLayoutCompat
                android:layout_width="0dp"
                android:layout_weight="0.55"
                android:layout_height="wrap_content"
                android:padding="16dp"
                android:orientation="vertical">

                <com.google.android.material.textview.MaterialTextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Maahi"
                    android:id="@+id/ass_name_tv_list_item"/>

                <com.google.android.material.textview.MaterialTextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="98989989898"
                    android:id="@+id/ass_mob_tv_list_item"/>

            </androidx.appcompat.widget.LinearLayoutCompat>

            <androidx.appcompat.widget.LinearLayoutCompat
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_weight="0.25">

                <com.google.android.material.button.MaterialButton
                    android:layout_width="match_parent"
                    android:layout_height="36dp"
                    app:cornerRadius="24dp"
                    android:textSize="10sp"
                    app:backgroundTint="@color/green"
                    android:textAllCaps="false"
                    android:text="Approve"/>

                <com.google.android.material.button.MaterialButton
                    android:layout_width="match_parent"
                    android:layout_height="36dp"
                    app:cornerRadius="24dp"
                    android:textSize="10sp"
                    app:backgroundTint="@color/red"
                    android:textAllCaps="false"
                    android:text="Reject"/>

                <com.google.android.material.button.MaterialButton
                    android:layout_width="match_parent"
                    android:layout_height="36dp"
                    app:cornerRadius="24dp"
                    android:textSize="10sp"
                    app:backgroundTint="@color/blue"
                    android:textAllCaps="false"
                    android:text="Allow"/>

                <com.google.android.material.button.MaterialButton
                    android:layout_width="match_parent"
                    android:layout_height="36dp"
                    app:cornerRadius="24dp"
                    android:textSize="10sp"
                    app:backgroundTint="@color/redOrange"
                    android:textAllCaps="false"
                    android:text="Exit"/>

                <com.google.android.material.button.MaterialButton
                    android:layout_width="match_parent"
                    android:layout_height="36dp"
                    app:cornerRadius="24dp"
                    android:textSize="10sp"
                    app:backgroundTint="@color/sessionOutColor"
                    android:textAllCaps="false"
                    android:text="Session Out"/>

                <com.google.android.material.button.MaterialButton
                    android:layout_width="match_parent"
                    android:layout_height="36dp"
                    app:cornerRadius="24dp"
                    android:textSize="10sp"
                    app:backgroundTint="@color/sessionInColor"
                    android:textAllCaps="false"
                    android:text="Session In"/>

                <com.google.android.material.button.MaterialButton
                    android:layout_width="match_parent"
                    android:layout_height="36dp"
                    app:cornerRadius="24dp"
                    android:textSize="10sp"
                    app:backgroundTint="@color/meetCompleteColor"
                    android:textAllCaps="false"
                    android:text="Complete"/>

            </androidx.appcompat.widget.LinearLayoutCompat>

        </androidx.appcompat.widget.LinearLayoutCompat>


</com.google.android.material.card.MaterialCardView>